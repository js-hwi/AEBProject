{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Arduino Upload",
            "type": "shell",
            "command": "arduino_debug.exe",
            "args": [
                "--upload",
                "--board",
                "arduino:avr:uno", // 보드 설정
                "--port",
                "COM12", // 아두이노 포트
                "${workspaceFolder}/mcp2515/mcp2515.ino"  // 경로 수정
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Upload Arduino code"
        }
    ]
}
